{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "outDir": "./dist",
    "allowJs": true,
    "resolveJsonModule": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "skipLibCheck": true
    // "strict": true,
  },
  "include": [
    "src",
    "tests"
  ],
  "exclude": [
    "node_modules",
    "scripts/*.ts",
    "./src/**/_*.ts"
  ]
}
