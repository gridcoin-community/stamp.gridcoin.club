{
  "name": "grc-stamp",
  "description": "",
  "version": "1.2.0",
  "author": "",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@prisma/client": "^5.13.0",
    "axios": "^1.6.8",
    "colors": "^1.4.0",
    "express": "^4.19.2",
    "gridcoin-rpc": "^4.0.2",
    "http-status-codes": "^2.3.0",
    "ioredis": "^5.4.1",
    "joi": "^17.13.0",
    "method-override": "^3.0.0",
    "moment": "^2.30.1",
    "morgan": "^1.10.1",
    "mysql2": "^3.9.7",
    "nconf": "^0.12.1",
    "uuid": "^9.0.1",
    "validator": "^13.11.0",
    "winston": "^3.13.0",
    "yayson": "^3.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.2.2",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^12.0.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^10.0.3",
    "@semantic-release/npm": "^12.0.2",
    "@semantic-release/release-notes-generator": "^13.0.0",
    "@types/chai": "^4.3.14",
    "@types/chance": "^1.1.7",
    "@types/express": "^4.17.21",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "27.0.0",
    "@types/method-override": "^0.0.35",
    "@types/morgan": "^1.9.9",
    "@types/nconf": "^0.10.6",
    "@types/node": "^20.19.14",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "@types/yayson": "^2.0.5",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.7.1",
    "chai": "^4.4.1",
    "chance": "^1.1.11",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "8.56.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.0.11",
    "jest": "29.0.0",
    "lint-staged": "^15.2.2",
    "nodemon": "^3.1.0",
    "npm-run-all": "^4.1.5",
    "prisma": "^5.13.0",
    "rimraf": "^5.0.5",
    "semantic-release": "^23.0.8",
    "semantic-release-monorepo": "^8.0.2",
    "supertest": "^7.0.0",
    "ts-jest": "29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "license": "ISC",
  "lint-staged": {
    "{src,test,tools}/**/*.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "main": "dist/index.js",
  "nodemonConfig": {
    "ignore": [
      ".node_persits/**/*"
    ]
  },
  "port": 7000,
  "private": true,
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "message": "chore(release): ${nextRelease.version}\n\n${nextRelease.notes}"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "clean": "rimraf ./dist",
    "commit": "git-cz",
    "dev": "npm-run-all -p build:watch start:dev",
    "prisma": "npx prisma generate",
    "semantic-release": "semantic-release -e semantic-release-monorepo",
    "start": "node dist/index.js",
    "start:dev": "nodemon dist/index.js",
    "test": "npm run test:integration && npm run test:unit && npm run test:lint && npm run typecheck",
    "test:integration": "NODE_ENV=testing jest --runInBand --verbose --testMatch '**/*.test.ts'",
    "test:lint": "eslint .",
    "test:start-test-container": "docker-compose up -d",
    "test:stop-test-container": "docker-compose down",
    "test:unit": "NODE_ENV=testing jest --verbose --testMatch '**/src/**/*.spec.ts'",
    "typecheck": "tsc --project ./tsconfig.json --noEmit --pretty false"
  }
}
